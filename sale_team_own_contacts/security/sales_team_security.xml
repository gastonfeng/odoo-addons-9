<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_sale_manager_own_contacts" model="res.groups">
        <field name="name">Manager Own Contacts</field>
        <field name="comment">the user will have an access to the sales configuration as well as statistic reports but will see own contacts only.</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
    <record id="crm_rule_own_contacts" model="ir.rule">
        <field name="name">Own Contacts</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">['|','|',('user_id', '=', user.id),('user_ids', '!=', False),('my_company_ids', 'in', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('sale_team_own_contacts.group_sale_manager_own_contacts'))]"/>
    </record>
</odoo>
